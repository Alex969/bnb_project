  <body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-start mb-0">Makers BnB</h3>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link active" aria-current="page" href="/login">Login</a>
            <a class="nav-link active" aria-current ="page" href="/">Register</a>
          </nav>
        </div>
      </header>

      <main>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
           <%if @username%>
            <h1 class="fw-dark">Welcome <%= @username %></h1>
           <%else%>
            <h1 class="fw-dark">Welcome to Bnb</h1>
           <%end%>
            <p class="lead text-muted">Have a look at our available places to rent from our top rated hosts !</p>
            <p>
              <a href="/listings/create" class="btn btn-primary my-2">Post a new Listing!</a>
            </p>
          </div>
        </div>
      </section>
    <div class="container">

<div class="album py-5 bg-light">
<div class="row row-cols-4 row-cols-sm-2 row-cols-md-3 g-2">
<%@all_listings.each do |listing|%>

<div class="col">
<div class="card shadow-sm">
<svg class="bd-placeholder-img card-img-top" width="40%" height="155" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%=listing.title%></text></svg>

<div class="card-body">
<p class="card-text"><%=listing.description%>.</p>  
<div class="d-flex justify-content-between align-items-center">
<div class="btn-group">
<button type="button" class="btn btn-sm btn-outline-secondary"><a href='listings/<%=listing.id%>/view'>View</a></button>
</div>
</div>
</div>  
</div> 
</div> 
<%end%> 

</div>

</div>


</main>

      <footer class="mt-auto text-white-50">
        <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
      </footer>
