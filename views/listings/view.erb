<!DOCTYPE html>
  <html>
    <head>
    <link rel="stylesheet" type="text/css" href="/style.css">
    </head>
    <body>
    <h1>
      <%= @current_listing.title %>
    </h2>

    <h2>
      <%= @current_listing.price_per_night %> per night
    </h2>

    <p>
      <%= @current_listing.description %>
    </p>

    <ul>
        <%@available_dates.each do |booking|%>
         <li>
         <h2><%=booking.date%></h2>
         <form action="/listings/view" method="post">
         <input type='hidden' name='listing_id' value='<%=@current_listing.id%>'/>
         <input type='hidden' name='booking_id' value='<%=booking.id%>'/>
         
         <input type="submit" value="Request Booking">
         </form>
         </li>
        <%end%>
    </ul>
    

    </body>
  </html>
  